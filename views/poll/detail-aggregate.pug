div(class="poll-data")
    table(class="table table-striped table-bordered")
        thead(class="bg-danger text-white")
            tr
                th
                th
                    p(class="lead")
                        strong Options
                th(class="text-center")
                    p(class="lead")
                        strong Votes
        tbody
            each option, key in poll.options()
                tr
                    td(class="text-center")
                        p(class="lead")
                            strong= key + 1
                    td
                        p(class="lead")= option.name()
                    td(class="text-center")
                        p(class="lead")= option.votes()
